{
  "mcpServers": {
    "jira-company": {
      "command": "/absolute/path/to/jira-mcp/.venv/bin/python",
      "args": ["/absolute/path/to/jira-mcp/server.py", "--instance", "company"],
      "env": {
        "JIRA_COMPANY_URL": "https://your-company.atlassian.net",
        "JIRA_COMPANY_EMAIL": "your.email@company.com",
        "JIRA_COMPANY_TOKEN": "your_jira_api_token_here"
      }
    },
    "jira-personal": {
      "command": "/absolute/path/to/jira-mcp/.venv/bin/python",
      "args": ["/absolute/path/to/jira-mcp/server.py", "--instance", "personal"],
      "env": {
        "JIRA_PERSONAL_URL": "https://your-workspace.atlassian.net",
        "JIRA_PERSONAL_EMAIL": "your.email@example.com",
        "JIRA_PERSONAL_TOKEN": "your_jira_api_token_here"
      }
    }
  }
}
